# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Models
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ChromaDB
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_NAME=legalmind_docs

# RAG Parameters
CHUNK_SIZE=512
CHUNK_OVERLAP=50
RETRIEVAL_TOP_K=5
HYBRID_ALPHA=0.6

# Evaluation
# NOTE: gpt-4o-mini is used by default for cost efficiency (~$0.06 per 20 samples).
# For production-grade evaluation, use gpt-4o (~$1.00 per 20 samples) or stronger
# to get more accurate metric scores, especially for Faithfulness and Context Recall.
RAGAS_JUDGE_MODEL=gpt-4o-mini

# Reranker
RERANKER_MODEL=rank-T5-flan
RERANKER_TOP_N=3

# API
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# Ollama (optional fallback)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
